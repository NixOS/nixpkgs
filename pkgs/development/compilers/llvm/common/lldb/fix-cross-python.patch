+    if(DEFINED ENV{_PYTHON_HOST_PLATFORM} and DEFINED ENV{_PYTHON_SYSCONFIGDATA_NAME})
+      set(LLDB_USE_HOST_PYTHON TRUE)
+    endif()
+  endif()
