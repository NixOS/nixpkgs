@@ -4859,7 +4859,7 @@
 	cat >>confdefs.h <<\_ACEOF
 #define THREAD_LOCAL_ALLOC 1
 _ACEOF
-
+	THREADDLLIBS=""
 	win32_threads=true
 	;;
      *-*-darwin*)
@@ -5934,6 +5934,7 @@
 # dyld calls anyway
 case "$host" in
   *-*-darwin*) ;;
+  *-*-cygwin*) ;;
   *)
     { echo "$as_me:$LINENO: checking for dlopen in -ldl" >&5
 echo $ECHO_N "checking for dlopen in -ldl... $ECHO_C" >&6; }

