+int mkTempFileName(const char *tmpl, char *buffer, unsigned int size) {
+  const char *tmp_dir;
+
+  tmp_dir = getenv ("TMPDIR");
+  if (!tmp_dir)
+    tmp_dir = getenv ("TMP");
+  if (!tmp_dir)
+    tmp_dir = getenv ("TEMP");
+
+  if (!tmp_dir)
+    {
+#ifdef OS_WIN32
+      tmp_dir = "C:\\";
+#else  
+      tmp_dir = "/tmp";
+#endif	/* !OS_WIN32 */
+    }
+
+  strncpy(buffer, tmp_dir, size);
+  assert((strlen(buffer)+strlen(tmpl)+2)<size);
+  strcat(buffer, DIRSEP);
+  strcat(buffer, tmpl);
+  return 0;
+}
