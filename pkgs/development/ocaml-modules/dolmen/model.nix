{
  buildDunePackage,
  dolmen,
  dolmen_loop,
  farith,
  ppx_deriving,
  zarith,
}:

buildDunePackage {
  pname = "dolmen_model";
  inherit (dolmen) src version;

  propagatedBuildInputs = [
    dolmen
    dolmen_loop
    farith
    ppx_deriving
    zarith
  ];

  meta = dolmen.meta // {
    description = "Dolmen library for verifying models generated by automated theorem provers and SMT solvers";
  };
}
