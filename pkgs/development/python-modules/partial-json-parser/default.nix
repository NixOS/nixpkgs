{
  lib,
  buildPythonPackage,
  fetchPypi,

  # build-system
  pdm-backend,

  # optional-dependencies
  rich,
}:

buildPythonPackage rec {
  pname = "partial-json-parser";
  version = "0.2.1.1.post4";
  pyproject = true;

  src = fetchPypi {
    pname = "partial_json_parser";
    inherit version;
    hash = "sha256-o48Rzriahvv70KytQXDUF9yzF2IcbsmrXytmUvP0YL8=";
  };

  build-system = [ pdm-backend ];

  optional-dependencies = {
    playground = [ rich ];
  };

  pythonImportsCheck = [ "partial_json_parser" ];

  meta = {
    description = "Parse partial JSON generated by LLM";
    homepage = "https://pypi.org/project/partial-json-parser/";
    license = lib.licenses.mit;
    maintainers = with lib.maintainers; [ GaetanLepage ];
  };
}
