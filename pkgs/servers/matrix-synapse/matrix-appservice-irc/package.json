    "bluebird": "^3.7.2",
    "diff": "^5.0.0",
    "escape-string-regexp": "^4.0.0",
    "extend": "^3.0.2",
    "he": "^1.2.0",
    "logform": "^2.4.0",
    "matrix-appservice-bridge": "^3.2.0",
    "matrix-org-irc": "^1.2.1",
    "matrix-bot-sdk": "0.5.19",
    "nopt": "^3.0.1",
    "p-queue": "^6.6.2",
