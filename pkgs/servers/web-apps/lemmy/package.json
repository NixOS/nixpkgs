    "@typescript-eslint/eslint-plugin": "^5.49.0",
    "@typescript-eslint/parser": "^5.49.0",
    "bootstrap": "^5.2.3",
    "bootswatch": "^5.2.3",
    "eslint": "^8.33.0",
    "eslint-plugin-inferno": "^7.32.1",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^8.0.3",
    "import-sort-style-module": "^6.0.0",
    "lint-staged": "^13.1.0",
    "prettier": "^2.8.3",
    "prettier-plugin-import-sort": "^0.0.7",
    "prettier-plugin-organize-imports": "^3.2.2",
    "prettier-plugin-packagejson": "^2.4.2",
    "rimraf": "^4.1.2",
    "sortpack": "^2.3.3",
    "style-loader": "^3.3.1",
    "terser": "^5.16.2",
    "typescript": "^4.9.5",
    "webpack-dev-server": "4.11.1"
  },
  "engines": {
    "node": ">=8.9.0"
  },
  "engineStrict": true,
  "lint-staged": {
    "*.{ts,tsx,js}": [
      "prettier --write",
      "eslint --fix"
    ],
    "package.json": [
      "sortpack"
    ]
  },
  "importSort": {
    ".js, .jsx, .ts, .tsx": {
      "style": "module",
      "parser": "typescript"
    }
  }
}
