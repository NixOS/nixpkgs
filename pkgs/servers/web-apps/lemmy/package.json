    "toastify-js": "^1.12.0",
    "tributejs": "^5.1.3",
    "webpack": "5.75.0",
    "webpack-cli": "^5.0.1",
    "webpack-node-externals": "^3.0.0",
    "websocket-ts": "^1.1.1"
  },
  "devDependencies": {
    "@babel/core": "^7.20.12",
    "@types/autosize": "^4.0.0",
    "@types/express": "^4.17.16",
    "@types/html-to-text": "^9.0.0",
    "@types/markdown-it": "^12.2.3",
    "@types/markdown-it-container": "^2.0.5",
    "@types/node": "^18.11.18",
