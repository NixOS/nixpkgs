#! /usr/bin/env nix-shell
#! nix-shell --show-trace ./updater-emacs.nix -i bash

SCRIPT_DIRECTORY=$(cd "$(dirname "${BASH_SOURCE[@]}")"; cd -P "$(dirname "$(readlink "${BASH_SOURCE[@]}" || echo .)")"; pwd)

exec emacs --fg-daemon=updater --quick -l $SCRIPT_DIRECTORY/update-melpa.el -f run-updater "$@"
