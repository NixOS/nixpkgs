+static pdinfo_t *
+label_lookup_part(const char *label, struct devsw **dev)
+{
+	pdinfo_t *dp, *pp;
+
+	/*
+	 * Check hard disks, then cd, then floppy
+	 */
+	STAILQ_FOREACH(dp, &hdinfo, pd_link) {
+		if (!strcmp(label, dp->pd_volname)) {
