diff -Naur cron-old/externs.h cron-new/externs.h
--- cron-old/externs.h	2024-08-23 09:04:25.525752797 -0300
+++ cron-new/externs.h	2024-08-23 10:12:05.304311078 -0300
@@ -121,3 +121,14 @@
 #ifndef WCOREDUMP
