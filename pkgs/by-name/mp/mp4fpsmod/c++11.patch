+    _actionGroup.add( "import", true,  LC_IMPORT, "import subtitles from TXT", "TXT" );
+    _actionGroup.add( "remove", false, LC_REMOVE, "remove all subtitles" );
+    _groups.push_back( &_actionGroup );
+
+    _usage = "[OPTION]... ACTION file...";
+    _description =
