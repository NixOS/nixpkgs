+    set(chars "0123456789abcdef")
+    set(hex "")
+
+    foreach(i RANGE 7)
+        math(EXPR nibble "${number} & 15")
+        string(SUBSTRING "${chars}" "${nibble}" 1 nibble_hex)
+        string(CONCAT hex "${nibble_hex}" "${hex}")
+
+        math(EXPR number "${number} >> 4")
+        if(${number} EQUAL 0)
