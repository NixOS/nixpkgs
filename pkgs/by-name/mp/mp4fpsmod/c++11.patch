+string
+toStringTrackType( const string& code )
+{
+    if( !code.compare( "vide" ))    // 14496-12
+        return "video";
+    if( !code.compare( "soun" ))    // 14496-12
+        return "audio";
+    if( !code.compare( "hint" ))    // 14496-12
+        return "hint";
+
+    if( !code.compare( "text" ))    // QTFF
+        return "text";
+    if( !code.compare( "tmcd" ))    // QTFF
+        return "timecode";
+
+    if( !code.compare( "subt" ))    // QTFF
+        return "subtitle";
+
+    return string( "(" ) + code + ")";
+}
