+                      getChapterTypeName( _ChapterType ).c_str() );
+    }
+
+    ostringstream oss;
+    oss << "converting chapters in file " << '"' << job.file << '"'
+        << " from " << getChapterTypeName( sourceType ) << " to " << getChapterTypeName( _ChapterType ) << endl;
+
+    verbose1f( "%s", oss.str().c_str() );
