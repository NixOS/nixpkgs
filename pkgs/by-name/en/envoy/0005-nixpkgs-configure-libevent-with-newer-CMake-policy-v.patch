@@ -350,6 +350,7 @@ envoy_cmake(
         "//conditions:default": ["-j1"],
     }),
     cache_entries = {
+        "CMAKE_POLICY_VERSION_MINIMUM": "3.5",
         "EVENT__DISABLE_OPENSSL": "on",
         "EVENT__DISABLE_MBEDTLS": "on",
         "EVENT__DISABLE_REGRESS": "on",
