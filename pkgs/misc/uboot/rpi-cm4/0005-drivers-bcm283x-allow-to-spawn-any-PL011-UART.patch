-	struct udevice *dev;
-
-	if (uclass_first_device(UCLASS_PINCTRL, &dev) || !dev)
-		return false;
-
-	if (pinctrl_get_gpio_mux(dev, 0, serial_gpio) != BCM2835_GPIO_ALT0)
-		return false;
-
-	return true;
-}
