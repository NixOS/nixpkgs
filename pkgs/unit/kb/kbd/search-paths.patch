--- a/src/setfont.c
+++ b/src/setfont.c
@@ -48,8 +48,8 @@ usage(void)
 	                    "    -v         Be verbose.\n"
 	                    "    -C <cons>  Indicate console device to be used.\n"
 	                    "    -V         Print version and exit.\n"
-	                    "Files are loaded from the current directory or %s/*/.\n"),
-	        DATADIR);
+	                    "Files are loaded from the current directory or %s/*/ or %s/*/.\n"),
+	        DATADIR, "/etc/kbd");
 	exit(EX_USAGE);
 }
 
