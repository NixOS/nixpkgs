    dependencies : [ libmd ],
    install : true,
    sources : [ 'md5/md5.c' ],
)
install_man('md5/md5.1')
foreach cmd : [ 'md5', 'sha1', 'sha224', 'sha256', 'sha384', 'sha512' ]
    foreach suffix : [ '', 'sum' ]
        cmd += suffix
        if cmd != 'md5'
            install_symlink(
                cmd,
                install_dir : get_option('bindir'),
                pointing_to : 'md5',
            )
            install_symlink(
                f'@cmd@.1',
                install_dir : get_option('mandir') + '/man1',
                pointing_to : 'md5.1',
            )
        endif
    endforeach
endforeach

